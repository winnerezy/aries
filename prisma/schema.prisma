generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstname String
  lastname String
  email String @unique
  password String
  username String @unique
  avatar String?
  bio String?
  friends String[] @db.ObjectId @unique
  friendRequests String[] @db.ObjectId @unique
  role Role @default(USER)
  status Status @default(Offline)
  socket String @default("")
}

enum Status {
  Online
  Offline
}

enum Role {
  USER
  ADMIN
}